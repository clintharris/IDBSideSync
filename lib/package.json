{
  "name": "@clintharris/idb-sidesync",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/clintharris/idb-sidesync.git"
  },
  "main": "dist/index.js",
  "module": "dist/idbsidesync.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "clean": "del dist",
    "build": "npm run tsdx -- build",
    "watch": "npm run tsdx -- watch",
    "pretsdx": "npm run clean",
    "tsdx": "tsdx --format umd,esm --name IDBSideSync",
    "test": "npm run test:jest && npm run test:cy",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:cy": "cypress run --quiet",
    "test:cy:watch": "nodemon --quiet --watch src --watch cypress --ext js,ts --exec 'npm run cy:run'",
    "test:cy:open": "cypress open",
    "lint": "tsdx lint src test",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/idbsidesync.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/idbsidesync.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {},
  "dependencies": {
    "murmurhash": "0.0.2",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/jest": "^26.0.19",
    "@types/murmurhash": "0.0.1",
    "@types/node": "^14.14.16",
    "@types/uuid": "^8.3.0",
    "cypress": "^6.6.0",
    "deep-equal": "^2.0.5",
    "del-cli": "^3.0.1",
    "husky": "^4.3.6",
    "jest": "26.1.0",
    "nodemon": "^2.0.7",
    "size-limit": "^4.9.1",
    "ts-jest": "26.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^3.9.7"
  }
}
